<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addNote">

    <TextView
        android:id="@+id/noteTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/kodchasan"
        android:layout_marginTop="33sp"
        android:text="@string/noteClassTitleText"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/TitleInput"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_below="@+id/noteTitleText"
        android:layout_marginStart="27sp"
        android:layout_marginEnd="27sp"
        android:paddingStart="10dp"
        android:layout_marginTop="12sp"
        android:paddingEnd="10dp"
        android:background="@drawable/card_rounded_corner"
        />
    <TextView
        android:id="@+id/discriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="24sp"
        android:layout_below="@+id/TitleInput"
        android:layout_marginStart="27sp"
        android:layout_marginTop="12sp"
        android:layout_marginBottom="5sp"
        />

    <EditText
        android:id="@+id/discription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/saveBtn"
        android:layout_below="@+id/discriptionText"
        android:layout_marginStart="27sp"
        android:layout_marginEnd="27sp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/discription_rounded_corner"
        android:fontFamily="@font/kodchasan"
        android:gravity="top|start"
        android:hint="@string/discriptionHint"
        android:paddingTop="4sp"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="vertical" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="124sp"
            android:layout_height="47sp"
            android:text="save"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="27sp"
            android:textColor="@color/white"
            android:backgroundTint="@null"
            android:background="@drawable/floating_button_background"
            />

       

</RelativeLayout>