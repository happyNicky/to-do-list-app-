<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/recyROw"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardRecy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_rounded_corner"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="1sp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1sp"
        >
        <EditText
            android:id="@+id/monRow"
            android:layout_width="match_parent"
            android:layout_height="37.5sp"
            android:paddingStart="10dp"
            android:layout_marginTop="10sp"
            android:editable="false"
            android:paddingEnd="10dp"
            android:drawableEnd="@mipmap/delete_icon"
            android:background="@drawable/recycler_view_style"
            android:elevation="4dp"

            />
    </androidx.cardview.widget.CardView>



</FrameLayout>