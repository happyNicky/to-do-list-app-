<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpPage">

    <RelativeLayout
        android:layout_width="280dp"
        android:id="@+id/sign_up_form"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/sign_up_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"
            android:fontFamily="@font/uchen"
            android:textStyle="bold"
            android:text="fill the information below" />
        <EditText
            android:id="@+id/emailEditTxtSignUpPage"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_up_welcome"
            android:fontFamily="@font/kotta_one"
            android:textSize="24dp"
            android:layout_marginTop="5dp"
            android:hint="email"
            />
        <EditText
            android:id="@+id/passwordEditTxtSignUpPage"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailEditTxtSignUpPage"
            android:fontFamily="@font/kotta_one"
            android:textSize="24dp"
            android:hint="password"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/userNameEditTxtSignUpPage"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordEditTxtSignUpPage"
            android:fontFamily="@font/kotta_one"
            android:layout_marginTop="5dp"
            android:textSize="24dp"
            android:hint="user name"
            />
        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/userNameEditTxtSignUpPage"
            android:text="sign up"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded_corner"
            />
    </RelativeLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_below="@id/sign_up_form"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>